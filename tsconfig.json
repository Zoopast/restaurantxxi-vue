{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "app/javascript/",
    "paths": {
      "@/*": [
       "./*"
      ]
     },
    "types": ["@types/node",
              "@types/jest",
              "@intlify/vite-plugin-vue-i18n/client",
              "@headlessui/vue"]
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.mock.ts"
  ]
}